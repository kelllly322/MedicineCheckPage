@page "/login"
@using MedicineCheckPage.Models
@using System.Reflection

@inject NavigationManager NavigationManager

<div class="card">
    <div class="card-body my-2">
        <h1>Welcom!</h1>
        <h3>登入</h3>
        <hr />
        <EditForm Model="Login" OnValidSubmit="SubmitHandler" OnInvalidSubmit="InvalidHandler">

    <div class="form-group">
                <label for="userName">身份證:</label><br />
                <InputText @bind-Value="login.UserName" class="form-control" id="userName" /><br />
            </div>
    <div class="form-group">
                <label for="pwd">密碼:</label><br />
                <InputPassword @bind-Value="login.Password" class="form-control" id="pwd" /><br />
            </div>
            <span class="form-control-plaintext"></span>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button class="btn btn-primary">登入</button>
                </div>
            </div>
        </EditForm>
    </div>
</div>


@code {
    private Login login = new Login();

    private void SubmitHandler() => Console.WriteLine($"身份證：{login.UserName} ，密碼：{login.Password}");

    private void InvalidHandler() => Console.WriteLine($"身份證： {login.UserName} ，密碼：{login.Password}");
}